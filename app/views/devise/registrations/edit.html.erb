<%= render 'shared/header' %>
<h2 style="text-align:center">Editar Usuario</h2>
<body style="font-family: 'Ubuntu Monospace', monospace;" class=" items-center justify-center h-screen">
<div class="w-full max-w-md p-1 mx-auto">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.label :email, class: "block  text-sm font-bold mb-1"  %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1"%>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

    <div class="mb-0">
      <div class="flex items-center">
        <%= f.label :password , class: "block  text-sm font-bold mb-1 mr-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500 mb-1 mr-2">(<%= @minimum_password_length %> caracteres minimos)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>

    <div class="mb-0">
      <div class="flex items-center">
          <%= f.label :password_confirmation , class: "block  text-sm font-bold mb-1 mr-2" %>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>


  <div class="field">
    <div class="flex items-center">
    <%= f.label :current_password, class: "block  text-sm font-bold mb-1 mr-2"  %><br/>
      <em class="text-sm text-gray-500 mb-1 mr-2">(ingresa tu contraseña actual para confirmar tus cambios)</em>
    </div>  
    <%= f.password_field :current_password, autocomplete: "current-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
  </div>
</div>


  <div class="text-center mt-2">
    <div class="flex justify-center items-center">
      <div class="actions">
        <%= f.submit "Update", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1.5 px-4 rounded mr-2" %>
      </div>
      <% end %>

        <div>
          <%= button_to "Eliminar cuenta", registration_path(resource_name), data: { confirm: "¿Estás seguro?" }, method: :delete , class: "bg-red-500 hover:bg-red-700 text-white font-bold py-1.5 px-4 rounded mr-2"%>
        </div>

      <%= link_to "Back", :back, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-1.5 px-4 rounded mr-2" %>
    </div>
  </div>
</body>