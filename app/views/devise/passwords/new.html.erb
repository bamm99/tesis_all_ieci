<%= render 'shared/header' %>
<h2 style="text-align:center">Forgot your password?</h2>

<body style="font-family: 'Ubuntu Monospace', monospace;" class=" items-center justify-center h-screen">  
  <div class="w-full max-w-md p-6 mx-auto">
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email, class: "block  text-sm font-bold mb-2" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline" %>
      </div>

      <div class="text-center">
        <div class=" items-center justify-between">
          <%= f.submit "Send me reset password instructions", class: "mt-2 bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-3.5 rounded" %>
          <% end %>
        </div>
      </div>

        <div class="text-center mt-4">
          <%= render "devise/shared/links" %>
        </div>
    </div>
</body>