<%= render 'shared/header' %>
<h2 style="text-align:center">Sign up</h2>

<body style="font-family: 'Ubuntu Monospace', monospace;" class=" items-center justify-center h-screen">
  
  <div class="w-full max-w-md p-6 mx-auto">  
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="mb-0">
      <%= f.label :name, class: "block  text-sm font-bold mb-1" %>
      <%= f.text_field :name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>
    <div class="mb-0">
      <%= f.label :last_name, class: "block  text-sm font-bold mb-1" %>
      <%= f.text_field :last_name, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>
    <div class="mb-0">
      <%= f.label :rut, class: "block  text-sm font-bold mb-1" %>
      <%= f.text_field :rut, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>
    <div class="mb-0">
      <%= f.label :email, class: "block  text-sm font-bold mb-1" %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>
    <div class="mb-0">
      <div class="flex items-center">
        <%= f.label :password , class: "block  text-sm font-bold mb-1 mr-2" %>
        <% if @minimum_password_length %>
          <em class="text-sm text-gray-500 mb-1 mr-2">(<%= @minimum_password_length %> characters minimum)</em>
        <% end %>
      </div>
      <%= f.password_field :password, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>

    <div class="mb-0">
      <div class="flex items-center">
          <%= f.label :password_confirmation , class: "block  text-sm font-bold mb-1 mr-2" %>
      </div>
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-1" %>
    </div>

  </div>
  
  <div class="text-center mt-2">
    <div class="flex justify-center items-center">
      <div>
        <%= f.submit "Sign up", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-1.5 px-4 rounded mr-2" %>
        <% end %>
      </div>
      <div>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>

</body>